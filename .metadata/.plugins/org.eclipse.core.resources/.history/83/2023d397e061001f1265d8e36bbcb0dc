package com.example;

public class Cal 
{

	public int add(String numbers)
	{
		int total=0;
		
		if(numbers.length()==0)
		return 0;
		
		else if(numbers.length()==1)
		return Integer.parseInt(numbers);
		
		else
		{
			String delimiter = ",|\n"; 
			
			// Check if a custom delimiter is provided
	        if (numbers.startsWith("//")) {
	            int delimiterIndex = numbers.indexOf("\n");
	            delimiter = numbers.substring(2, delimiterIndex);  // Extract custom delimiter
	            numbers = numbers.substring(delimiterIndex + 1);  // Remove delimiter definition from string
	        }
			
			
			String[] numbers_String=numbers.split(",");
			for (int i = 0; i < numbers_String.length; i++) {
				total = total+ Integer.parseInt(numbers_String[i]);
			}
		}
		return total;
	}
}
